.show
  position relative
  display flex
  flex-direction column
  width: 33%
  min-height: 450px
  @media (max-width: 650px)
    width: 100%
    // flex 1 0 auto
  a
    flex 1 1 auto
    padding 10px
  &__playcontrols
    display flex
    align-items center
    justify-content center
    width 5rem
    flex-shrink 0
    padding 1rem
    button
      background none
      border 0
      outline-color yellow
      &:hover
        color yellow
  &--dummy
    flex 1 0 auto
  &--active
    border-right-color white
    background white
    border-left 0
    padding-left 1rem
    &:before
      display block
      background grad
      width 10px
      height 100%
      content ''
      position absolute
      top 0
      left 0
  &__displayNumber
    text-transform uppercase
    margin 0
    color gray3
    font-size 11px
  &__title
    color white
    font-size 1.5rem
    margin 0
  &__date
    margin-top 0
    text-align right
    color gray3
    font-size 1.2rem

.show-wrap
  display flex
  flex-wrap wrap

.showList
  display flex
  flex-direction row
  flex-flow wrap

.showNotes
  position sticky
  top 102px
  padding 2rem
  font-size 1.5rem
  color white
  @media (max-width: 650px)
    width 100%
  .button
    border-bottom 0
  ul
    padding-left 2rem
    list-style-type circle
  li
    margin 10px 0
  h1,h2,h3,h4,h5,h6
    font-family 'courier'
    font-weight 100
    border-bottom 1px solid grey
    padding-bottom 1rem
    &:before
      padding-right 1rem
  pre
    background lightgrey
    padding 1rem
  h1,h2
    font-size 2.5rem
  a
    color lighten(black, 20%)
    border-bottom 1px solid yellow
    text-decoration none

